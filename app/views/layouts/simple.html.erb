<html>
  <head>
    <%=stylesheet_link_tag    "site"    %>
    <%=javascript_include_tag :defaults %>
  </head>
  <body>
    <div id="header">
      <div id="user-nav">
        <%=render "/users/user_bar" %>
      </div>
      <div id="logo"><%=link_to "parselets", "/"%></div>
    </div>
    <%= %[<div id="notice">#{h flash[:notice]}</div>] if flash[:notice] %>
	<form id="search" action="/search" method="GET">
		<input type="text" name="q" id="box"> <input type="submit" value="Search">
		<%=link_to "create", new_parselet_path %>
	</form>
    <div id="main">
      <%=yield %>
    </div>
  </body>
</html>