<div class="column">
	<% form_tag session_path do -%>
	
		<p><%= label_tag 'login' %><br />
		<%= text_field_tag 'login', @login, :tabindex => 1 %></p>

		<p><%= label_tag 'password' %>
			( <%=link_to "forgot?", new_password_request_path, :tabindex => 4 %> )
			<br/>
		<%= password_field_tag 'password', nil, :tabindex => 2 %></p>

		<p><%= label_tag 'remember_me', 'Remember me' %>
		<%= check_box_tag 'remember_me', '1', @remember_me, :tabindex => 3 %></p>

		<p><%= submit_tag 'Log in' %></p>
	<% end -%>
</div>
<div class="blue">
	<% form_tag new_user_path, :method => :get do -%>
		
		<p><%= label_tag 'invitation_code' %> (<%=link_to "request an invitation", new_invitation_request_path %>)<br />
		<%= text_field_tag 'invite', @invite %> <%= submit_tag 'Sign up' %></p>
	<% end -%>
</div>