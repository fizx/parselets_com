<% new_comment ||=false %>
<ol id="comments"><%=render(comments) or "<li>No comments</li>" %></ol>

<% if new_comment %>
  <div id="add_comment">
    <% if logged_in? %>
      <%= will_paginate comments, :param_name => 'comments_page' %>
      <p>&nbsp;</p>
    	
    	<h3>Add a comment</h3>
    	<%=render "/comments/form", :comment => new_comment %>
    <% else %>
      Please <%=link_to "log in", login_path, :rel =>"facebox"%> to add a comment.
    <% end %>
  </div>
<% end %>
