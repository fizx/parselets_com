<% remote_form_for(comment, :url => "/comments") do |f| %>
  <%= f.error_messages %>
  <%= hidden_field_tag 'comments_page', params[:comments_page] %>
  <%= f.hidden_field :commentable_type %>
  <%= f.hidden_field :commentable_id %>
  <p>
    <%= f.text_area :content %>
  </p>
  <p>
    <%= f.submit "Save" %>
  </p>
<% end %>
