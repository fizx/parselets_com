<h1>Listing parselets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Code</th>
    <th>Pattern</th>
    <th>Example url</th>
    <th>Pattern regex</th>
  </tr>

<% for parselet in @parselets %>
  <tr>
    <td><%=h parselet.name %></td>
    <td><%=h parselet.description %></td>
    <td><%=h parselet.code %></td>
    <td><%=h parselet.pattern %></td>
    <td><%=h parselet.example_url %></td>
    <td><%=h parselet.pattern_regex %></td>
    <td><%= link_to 'Show', parselet %></td>
    <td><%= link_to 'Edit', edit_parselet_path(parselet) %></td>
    <td><%= link_to 'Destroy', parselet, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New parselet', new_parselet_path %>
