<li class="v">
  <% path = url_for :controller => "parselets", :action => "show", :id => version, :version => version.version %>
	<a class="version<%= " current" if @parselet && @parselet.version == version.version %>" href='<%= path %>'><div><%= version.version %></div></a>
	
  <%= ratings version %>
  <%= comments version, :small => true %>
  <%= favorite(version, false) %>
  
	<%= link_to "#{time_ago_in_words(version.created_at)} ago", path, :class=>"url" %> <span class='by'>by</span> 
  <%= link_to h(version.user.login), user_path(:id => version.user_id), :class=>"url" %>

	<div class="vdiff"><pre id="<%=version.version%>-version-diff"></pre></div>
  <pre id="<%=version.version%>-version-summary" class="summary" style="display:none"><%=h version.summary%></pre>
</li>