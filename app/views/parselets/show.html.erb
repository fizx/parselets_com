<div style="float:right;background-color:#eee;border:1px silver solid;padding:10px;width:400px">
	<h3>API helper</h3>
	<h4>Url parameters</h4>
	<p>-- none --</p>
	<h4>Output type</h4>
	<select>
		<option>human-readable</option>
		<option>json</option>
		<option>xml</option>
	</select>
	

	<h4>Versioning</h4>
	<select>
		<option>latest by me</option>
		<option>latest by me or parselets auto-fix</option>
		<option>latest by me or my friends</option>
		<option>latest working</option>
		
	</select>
	
	<h4>Use this url: </h4>
	<a href="#">http://localhost:3000/parselets/16?output=json</a>
	</p>
</div>

<h1> <%=status(@parselet)%>
	<%=comments @parselet %>
<%=h @parselet.name %> by <%=link_to @parselet.user.login, @parselet.user%></h1>
<% if @parselet.respond_to?(:versions) %>
<h2><%=link_to "versions", parselet_parselet_versions_path(@parselet)%></h2>
<% else %>
<h2>Version #<%=@parselet.version%></h2>
<% end %>
<h3><%=h @parselet.description %></h3>
<h4> Works on sites that match <%=h @parselet.pattern %>, <br />like <%=link_to h(@parselet.example_url), @parselet.example_url%> [ <%=link_to "cached", @parselet.cached_page %> ]</h4>

<h4>Code: <%= link_to 'Edit', edit_path(@parselet) %></h4>
<div style="background-color:#eee;border:1px silver solid;padding:10px;width:400px">
  <pre><%= @parselet.pretty_code %></pre>
</div>

<h4>Sample output:</h4>
<div style="background-color:#eee;border:1px silver solid;padding:10px;width:400px">
  	<pre><%=@parselet.pretty_example_data%></pre>
</div>

