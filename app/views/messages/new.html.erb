<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages(:message => '') %><br />
  <p>
    <!-- http://github.com/chris/auto_complete_jquery/tree/master -->
    <%= label_tag :to %><br />
    <%= text_field_tag :to, params[:to] %>
  </p>
  <p>
    <%= f.label :subject %><br />
    <%= f.text_field :subject %>
  </p>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text %>
  </p>
  <p>
    <%= f.submit 'Send' %>
  </p>
<% end %>
